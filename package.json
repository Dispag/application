{
  "name": "application",
  "version": "1.0.0",
  "description": "Projeto de Microsservicos com implementacao de CQRS com Kafka",
  "dependencies": {
    "@nestjs/common": "^9.3.9",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.9",
    "@nestjs/platform-express": "^9.3.9",
    "@nestjs/typeorm": "^9.0.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/prettier": "^2.7.0",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "aws-lambda": "^1.0.7",
    "aws-serverless-express": "^3.4.0",
    "body-parser": "^1.19.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "jsonwebtoken": "^9.0.0",
    "kafka-node": "^5.0.0",
    "pg": "^8.7.1",
    "prettier": "^2.7.1",
    "reflect-metadata": "^0.1.13",
    "serverless": "^0.0.1",
    "ts-node-dev": "^2.0.0",
    "typeorm": "^0.3.12",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/testing": "^9.3.9",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.7.5",
    "@types/pg": "^8.6.6",
    "cross-env": "^7.0.3",
    "eslint-plugin-jest": "^26.8.3",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "minimist": "^1.2.5",
    "mocked-env": "^1.3.5",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-jetpack": "^0.11.1",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-typescript": "^2.1.4",
    "serverless-webpack": "^5.11.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2",
    "webpack": "^5.79.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "scripts": {
    "build": "npx tsc --build",
    "start": "cross-env NODE_ENV=dev npx sls offline start --stage dev",
    "start2": "nest start",
    "deploy": "cross-env NODE_ENV=prd npx sls deploy --verbose --stage prd --region us-east-2",
    "undeploy": "cross-env NODE_ENV=prd npx sls remove",
    "test": "jest --forceExit --passWithNoTests --detectOpenHandles --runInBand --coverage",
    "lint": "eslint '**/*.{js,ts,tsx}' --max-warnings=122"
  },
  "resolutions": {
    "minimist": "^1.2.5"
  },
  "author": "Alexsander Melo",
  "license": "ISC",
  "engines": {
    "npm": ">=8.17.0",
    "node": ">=16.16.0"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.test.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "babelConfig": true
      }
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/database/",
      "<rootDir>/src/modules/",
      "<rootDir>/src/test/"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "coverageReporters": [
      "text"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "core-js"
    ],
    "globalSetup": "./src/test/jest-suite-setup.ts",
    "globalTeardown": "./src/test/jest-suite-teardown.ts"
  }
}
